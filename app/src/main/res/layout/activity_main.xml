<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="id.sch.smktelkom_mlg.project2.xirpl40810132129.malangvacation.MainActivity">

        <ViewFlipper
            android:id="@+id/viewFlipper"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_marginTop="0dp"
            android:autoStart="true"
            android:flipInterval="4000">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="0px"
                android:scaleType="centerCrop"
                android:src="@drawable/alun2" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="0px"
                android:scaleType="centerCrop"
                android:src="@drawable/matos" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="0px"
                android:scaleType="centerCrop"
                android:src="@drawable/goachina" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="0px"
                android:scaleType="centerCrop"
                android:src="@drawable/strudel1" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="0px"
                android:scaleType="centerCrop"
                android:src="@drawable/balekambang" />
        </ViewFlipper>


        <ImageButton
            android:id="@+id/maps"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_below="@+id/viewFlipper"
            android:layout_margin="10dp"
            android:src="@drawable/button1" />

        <ImageButton
            android:id="@+id/food"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/viewFlipper"
            android:layout_margin="10dp"
            android:src="@drawable/button2" />

        <ImageButton
            android:id="@+id/search"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_alignEnd="@+id/maps"
            android:layout_alignRight="@+id/maps"
            android:layout_below="@+id/maps"
            android:layout_margin="10dp"
            android:src="@drawable/button3" />

        <ImageButton
            android:id="@+id/hotel"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/food"
            android:layout_margin="10dp"
            android:src="@drawable/button4" />

        <ImageButton
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_below="@+id/hotel"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:src="@drawable/button5" />
    </RelativeLayout>
</ScrollView>
